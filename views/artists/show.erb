<article class="main">

  <h2><%= @artist.name %></h2>

  <h4>Available Albums </h4>

  <ul>
    <% @artist.albums.each do |album| %>
    <li>
      <a href="/albums/<%= album.id %>"><%= album.title %></a>

    </li>
    <% end %>

  </ul>

  <form action="/artists/<%= @artist.id %>/delete" method="post">
    <input type="submit" value="Remove Artist">

  </form>

</article>
